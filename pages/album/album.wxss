/* pages/album/album.wxss */

.operation {
  display: flex;
  flex-direction: row;
  width: 100%;
  background-color: #d82a0f;
}

.create {
  display: flex;
  flex-direction: row;
  color: #ffffff;
  width: 50%;
  font-size: 38rpx;
  margin-left: 20rpx;
}

.edit {
  display: flex;
  flex-direction: row-reverse;
  color: #ffffff;
  width: 50%;
  text-align: right;
  font-size: 38rpx;
  margin-right: 20rpx;
}

.hr {
  border: 2rpx solid #f7f7f7;
}

.itemparent {
  display: flex;
  flex-direction: row;
}

.item {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 200rpx;
  margin-bottom: 5rpx;
}

.left {
  width: 200rpx;
  height: 200rpx;
}

.left image {
  width: 200rpx;
  height: 200rpx;
}

.middle {
  width: 430rpx;
  height: 200rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.name {
  font-size: 40rpx;
}

.count {
  font-size: 30rpx;
  color: #a2a2a2;
}

.right {
  display: flex;
  flex-direction: column;
  width: 60rpx;
  height: 200rpx;
  justify-content: center;
}

.right image {
  width: 60rpx;
  height: 60rpx;
}

.chk {
  display: flex;
  flex-direction: column;
  width: 60rpx;
  height: 200rpx;
  justify-content: center;
}
