.item {
  width: 100%;
  height: 110rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.title {
  width: 90%;
  font-size: 38rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
}

.detail2 {
  width: 10%;
  font-size: 38rpx;
  color: #888;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  margin-right: 30rpx;
}

.line {
  border: 2rpx solid #ccc;
  opacity: 0.2;
}

.btn {
  width: 360rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #f7f7f7;
  background-color: #d82a0f;
  margin-right: 20rpx;
  border-radius: 16rpx;
  font-size: 35rpx;
  color: #ffffff;
}
